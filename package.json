{
  "name": "recipes-lambda",
  "version": "1.0.0",
  "description": "Add, Update, & Delete recipes",
  "license": "ISC",
  "author": "papa-yus-recipes",
  "repository": "https://github.com/FloerSoloer/FloerSoloer",
  "private": true,
  "main": "dist/bundle.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "prettier --write --loglevel silent . && eslint --fix .",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "test": "jest",
    "build": "tsc -p src && 7z a recipes-lambda.zip ./dist/*",
    "commit": "cz",
    "dev": "nodemon --config server/nodemon.json"
  },
  "dependencies": {
    "aws-sdk": "^2.1195.0",
    "dynamoose": "^2.8.6"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.102",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.8.1",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.4",
    "node": "^16.13.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5",
    "yarn": "^1.22.17"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  }
}
